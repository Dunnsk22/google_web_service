<?xml version="1.0" encoding="utf-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xmlns="http://java.sun.com/xml/ns/javaee"
xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" version="2.5">
	
	<servlet>
		<servlet-name>All Staff Servlet</servlet-name>
		<servlet-class>com.staff.service.web.controller.FindStaffServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>All Staff Servlet</servlet-name>
		<url-pattern>/find-all-staff</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>Add Staff Servlet</servlet-name>
		<servlet-class>com.staff.service.web.controller.AddStaffMemberServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>Add Staff Servlet</servlet-name>
		<url-pattern>/add-staff-member</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>Staff Member Servlet</servlet-name>
		<servlet-class>com.staff.service.web.controller.FindStaffByNameServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>Staff Member Servlet</servlet-name>
		<url-pattern>/find-staff-member</url-pattern>
	</servlet-mapping>

	<welcome-file-list>
		<welcome-file>index.jsp</welcome-file>
	</welcome-file-list>
</web-app>
	

